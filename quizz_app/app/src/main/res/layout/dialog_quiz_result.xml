<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_normal"
    android:padding="@dimen/padding_normal"
    app:cardCornerRadius="@dimen/padding_normal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dqr_tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Your result: 10/10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dqr_btn_positive"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:text="@string/ok_btn"
        app:layout_constraintEnd_toEndOf="@id/dqr_tv_result"
        app:layout_constraintTop_toBottomOf="@id/dqr_tv_result" />
</androidx.constraintlayout.widget.ConstraintLayout>
